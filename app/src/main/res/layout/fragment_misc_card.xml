<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_padding"
    app:cardElevation="3dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:background="@color/colorButtons"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/medium_padding"
            android:textAllCaps="true"
            android:textStyle="bold"

            tools:text="Hello I am a long title that usually takes at least two rows  ;)" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"

            tools:src="@drawable/classes_priest"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:background="@color/colorWhite"
            android:textColor="@color/colorVeryDark"
            android:justificationMode="inter_word"

            tools:text="@string/gnome_desc"/>
    </LinearLayout>

</android.support.v7.widget.CardView>