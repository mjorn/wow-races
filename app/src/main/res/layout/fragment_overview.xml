<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorButtons"
    >

    <ImageView
        android:id="@+id/race_back"
        tools:src="@drawable/draenei_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:scaleType="fitEnd"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/race_models"
                tools:src="@drawable/bloodelf_models"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:paddingTop="@dimen/medium_padding"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/race_desc"
                tools:text="@string/worgen_desc"
                android:textSize="@dimen/medium_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:fontFamily="georgia"
                android:justificationMode="inter_word" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>